<% if @user_votes.include? vote %>
  <% Vote.values.keys.each do |reason| %>

    <%= link_to Vote.enum_key_to_sentence(reason),
      quote_vote_path(quote, vote, { vote: { value: reason } } ), method: :patch %>

  <% end %>

  <%= link_to "Erase my vote", quote_vote_path(quote, vote), method: :delete %>

<% else %>

  <% Vote.values.keys.each do |reason| %>

    <%= link_to Vote.enum_key_to_sentence(reason),
      quote_votes_path(quote, { vote: { value: reason } } ), method: :post %>

  <% end %>
<% end %>
