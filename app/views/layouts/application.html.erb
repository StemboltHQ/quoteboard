<!DOCTYPE html>
<html>
  <head>
    <title>Quotes</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div>
        <%= link_to "Add Quote", new_quote_path %>
        <%= link_to "All Quotes", quotes_path %>
        <%= link_to "Highest Rated Quotes", best_quotes_path %>
        <% if current_user %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        <% end %>
      </div>
      <% if alert %>
        <div class="well alert-danger">
          <%= alert %>
        </div>
      <% end %>
      <% if notice %>
        <div class="well alert-success">
          <%= notice %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
